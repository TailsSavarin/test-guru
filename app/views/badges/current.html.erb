<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <h1 class="display-4 text-center"><%= t('.header') %></h1>

    <% if @badges.present? %>  
      <%= render @badges %>
    <% else %>
      <h3 class="text-center"><%= t('.no_badges') %></h3>
    <% end %>

    <p>
      <%= link_to t('.badge_list'), badges_path, class: 'btn btn-primary btn-sm active' %>
      <%= link_to t('.back'), tests_path, class: 'btn btn-secondary btn-sm active' %>
    </p>
  </div>
</div>

