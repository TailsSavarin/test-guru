<tr>
  <td><%= question.body %></td>
  <td>
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to t('.show'), admin_question_path(question), class: 'btn btn-outline-secondary' %>
      <%= link_to t('.edit'), edit_admin_question_path(question), class: 'btn btn-outline-secondary' %> 
      <%= link_to t('.delete'), admin_question_path(question), method: :delete, data: { confirm: t('.confirm') }, class: 'btn btn-outline-secondary' %>
    </div>
  </td>
</tr>
