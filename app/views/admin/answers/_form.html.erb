<%= form_with model: [:admin, @question, @answer], local: true do |f| %>
  <%= render "shared/errors", resource: @answer %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
  </div>

  <div class="field">
    <%= f.label :correct %><br />
    <%= f.check_box :correct, id: :answer_correct %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %> 
