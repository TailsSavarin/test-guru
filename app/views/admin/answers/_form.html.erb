<%= form_with model: [:admin, @question, @answer], local: true do |f| %>
  <div class="form-group col-md-6">
    <%= render "shared/errors", resource: @answer %>

    <p>
      <%= f.label :body %>
      <%= f.text_area :body, id: :answer_body, rows: 7, cols: 60, class: 'form-control' %>
    </p>

    <p>
      <%= f.label :correct %>
      <%= f.check_box :correct, id: :answer_correct, class: 'form-check-label' %>
    </p>

    <%= f.submit class: 'btn btn-success btn-lg' %>
  </div>
<% end %> 
