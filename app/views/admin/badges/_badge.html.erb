<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><%= badge.image %></td>
  <td class="align-middle"><%= badge.rule %></td>
  <td class="align-middle"><%= badge.description %></td>
  <td class="align-middle">
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to t('.show'),
                  admin_badge_path(badge),
                  class: 'btn btn-outline-secondary' %>
      <%= link_to t('.edit'),
                  edit_admin_badge_path(badge),
                  class: 'btn btn-outline-secondary' %>
      <%= link_to t('.delete'),
                  admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: t('.confirm')},
                  class: 'btn btn-outline-secondary' %>
    </div>
  </td>

