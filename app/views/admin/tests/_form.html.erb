<%= form_with model: [:admin, @test], local: true do |f| %>
  <div class="form-group col-md-6">
    <%= render 'shared/errors', resource: @test %>

    <p>
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-control' %>
    </p>

    <p>
      <%= f.label :title %>
      <%= f.text_field :title, id: :test_title, class: 'form-control form-control-lg' %>
    </p>

    <p>
      <%= f.label :level %>
      <%= f.number_field :level, id: :test_level, class: 'form-control' %>
    </p>

    <%= f.submit class: 'btn btn-success btn-lg' %>
  </div>
<% end %>
