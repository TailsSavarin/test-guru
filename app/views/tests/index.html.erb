<h1 class="display-4 text-center"><%= t('.header') %></h1>

<table class="table text-center">
  <thead class="thead">
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'line-arrow-up', class: 'text-success hide' %>
        <%= octicon 'line-arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.category') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.author') %></th>
      <th><%= t('.questions') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>



