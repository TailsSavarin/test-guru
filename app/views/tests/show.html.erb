<h1>Test number <%= @test.id %></h1>

<p>
  <b>Category - </b>
  <%= @test.category.title%>
</p>

<p>
  <b>Title - </b>
  <%= @test.title %>
</p>

<p>
  <b>Level - </b>
  <%= @test.level %>
</p>

<p>
  <b>Author - </b>
  <%= @test.author.name%>
</p>

<%= link_to 'Edit Test information', edit_test_path(@test) %><br>

<table>
  <tr>
    <th>Questions</th>
    <th colspan=3>Actions</th>
  </tr>

  <%= render @test.questions %><br>
</table>

<%= link_to 'Create New Question', new_test_question_path(@test) %><br>
<br><%= link_to 'Back to Test List', tests_path %>

