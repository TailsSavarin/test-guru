<nav class="navbar navbar-dark bg-dark">
  <%= link_to t('.testguru_welcome'), root_path, class: 'navbar-brand' %>

  <span class="navbar-text">
    <% if current_user&.admin? %>
      <%= link_to t('.admin'), admin_tests_path %> |
    <% end %> 

    <% if user_signed_in? %>
      <%= octicon 'clock' %>
      <%= t('.login_time') %>
      <%= current_time %> |
      <%= octicon 'person' %>
      <%= t('.profile', email: current_user.email) %>
      <%= link_to t('.logout'), destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %>
    <% else %>
      <%= link_to t('.login'), new_user_session_path, class: 'btn btn-outline-primary' %>
      <%= link_to t('.sign_up'), new_user_registration_path, class: 'btn btn-outline-success' %> 
    <% end %>
  </span>
</nav>
